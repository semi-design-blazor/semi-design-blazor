@namespace Semi.Design.Shared
<div class="monaco" style="">
    <SButton Block Style="width:100%;" OnClick="RunCode">Run</SButton>
    <SMonacoEditor @ref="_monacoEditor" InitMonacoHandler="async()=>await MonacoAsync()" Style="float: left;" MonacoRegisterCompletionItemOptions="RegisterCompletionItemProvider()" Width="50%">
    </SMonacoEditor>

    <div class="render">
        @if (ComponentType != null)
        {
            <DynamicComponent Type="@ComponentType" />
        }
    </div>
</div>

<style>

    .render {
        height: 400px;
        width: 45%;
        float: left;
        margin: 8px;
    }
    .monaco{
        width: 100%;
        height: 530px;
        margin: 8px;
    }
</style>